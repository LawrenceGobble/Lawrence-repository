<p id="notice"><%= notice %></p>

<p>
  <strong>Uname:</strong>
  <%= @test.uname %>
</p>

<p>
  <strong>Content:</strong>
  <%= @test.content %>
</p>

<h2>Add a comment:</h2>  
<%= form_for([@test, @test.comments.build]) do |f| %>  
  <div class="field">  
<%= f.label :commenter %><br />  
<%= f.text_field :commenter %>  
  </div>  
  <div class="field">  
<%= f.label :body %><br />  
<%= f.text_area :body %>  
  </div>  
  <div class="actions">  
<%= f.submit %>  
  </div>  
<% end %>  

<h2>Comments</h2>  
<% @test.comments.each do |comment| %>  
  <p>  
<b>Commenter:</b>  
<%= comment.commenter %>  
  </p>  
   
  <p>  
<b>Comment:</b>  
<%= comment.body %>  
  </p>  
<% end %>  

<%= link_to 'Edit', edit_test_path(@test) %> |
<%= link_to 'Back', tests_path %>
